
@model IEnumerable<RecipeProj.Models.Recipe>

<div class="row">
    @foreach (var item in Model)
    {
        //card
        <div class="card col-sm-6 col-md-6 col-lg-2 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
            <img class="card-img" src="~/Content/Images/RecipeImg.png">
            <h4 class="card-title centered underline"><b>@Html.DisplayFor(modelItem => item.Name)</b></h4>
            <div class="card-text">
                <p><b>Ingredients:</b></p>
                <ul>
                    @foreach (var ingredient in item.Ingredients)
                    {
                        <li> @Html.DisplayFor(modelItem => ingredient.Name) </li>
                    }
                </ul>
            </div>
        </div>

    }
</div>